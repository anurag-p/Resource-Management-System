<%- model_class = ResAllocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
<!--  <dt><strong><%#= model_class.human_attribute_name(:date) %>:</strong></dt>-->
<!--  <dd><%#= @res_allocation.date_id %></dd>-->
  <dt><strong><%= model_class.human_attribute_name(:project) %>:</strong></dt>
  <dd><%= @res_allocation.project.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resource) %>:</strong></dt>
  <dd><%= @res_allocation.resource.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hours) %>:</strong></dt>
  <dd><%= @res_allocation.hours %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              res_allocations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_res_allocation_path(@res_allocation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              res_allocation_path(@res_allocation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
