<%- model_class = AllocationDate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Allocation_Dates) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @allocation_dates.each do |allocation_date| %>
      <tr>
        <td><%= link_to (allocation_date.value.strftime("%m-%d-%Y")),res_allocations_path(:id=>allocation_date.id)%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_allocation_date_path(allocation_date), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      allocation_date_path(allocation_date),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_allocation_date_path,
            :class => 'btn btn-primary' %>
